{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
    "formatter": {
    "enabled": true,
    "indentStyle": "tab"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
	},
  "assist": {
	"actions": {
		"source": {
			"organizeImports": "on"
		}
	}
  }
}